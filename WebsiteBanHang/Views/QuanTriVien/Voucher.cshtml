
@{
    ViewBag.Title = "Voucher";
    Layout = "~/Views/Layout/QuanTriLayout.cshtml";
}

<div class="inner_content">
    <div class="wthree_general graph-form agile_info_shadow ">
        <h3 class="w3_inner_tittle two">Tạo Voucher Dành Cho Khách Hàng Thân Thiết</h3>

        <div class="grid-1 ">
            <div class="form-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="focusedinput" class="col-sm-2 control-label">Nhập mã voucher</label>
                        <div id="fsinput" class="col-sm-8">
                            <input type="text" class="form-control1" id="focusedinput" placeholder="Default Input">

                        </div>

                    </div>
                    <div class="form-group">
                        <label for="focusedinput" class="col-sm-2 control-label">Nhập số tiền</label>
                        <div id="einput" class="col-sm-8">
                            <input  type="text" class="form-control1" id="endinput" placeholder="Default Input">
                        </div>

                    </div>

                    <div class="form-group">
                        <label for="radio" class="col-sm-2 control-label">Áp dụng cho (Loại thành viên)</label>
                        <div class="col-sm-8">
                            <div class="radio-inline"><label><input value="7" type="radio"> Đồng</label></div>
                            <div class="radio-inline"><label><input value="10" type="radio"> Bạc</label></div>
                            <div class="radio-inline"><label><input value="30" type="radio">  Vàng</label></div>
                            <div class="radio-inline"><label><input value="30" type="radio">  Bạch kim</label></div>
                            <div class="radio-inline"><label><input value="30" type="radio">  Kim cương</label></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="radio" class="col-sm-2 control-label"></label>
                        <div class="col-sm-8">
                            <button id="btn-fs" type="button" class="radio block btn info">Tạo</button>

                        </div>
                    </div>




                </form>
            </div>

        </div>
    </div>
</div>
<style>
    .btn {
        border: none; /* Remove borders */
        color: white; /* Add a text color */
        padding: 14px 28px; /* Add some padding */
        cursor: pointer; /* Add a pointer cursor on mouse-over */
    }

    .info {
        background-color: #2196F3;
    }
        /* Blue */
        .info:hover {
            background: #0b7dda;
        }
</style>
