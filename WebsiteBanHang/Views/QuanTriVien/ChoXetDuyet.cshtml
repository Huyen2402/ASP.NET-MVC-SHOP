@using WebsiteBanHang.Models
@model List<Shop>

@{
    ViewBag.Title = "ChoXetDuyet";
    Layout = "~/Views/Layout/QuanTriLayout.cshtml";
}

<div style="min-height:700px"  class="inner_content">
    <div class="w3l-table-info agile_info_shadow">
      
        <table id="table-max-height" class="max-height mt-4">
            <thead>
                <tr>
                    <th class="text-center">Tên Shop</th>
                    <th class="text-center">Thời Gian</th>
                    <th class="text-center">Thao Tác</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center" data-th="Name"><span class="bt-content">@item.TenShop</span></td>
                        <td class="text-center" data-th="Age"><span class="bt-content">@item.NgayTao</span></td>
                        <td class="text-center" data-th="Gender"><a href="@Url.Action("ThongTinShop","QuanTriVien", new {@MaShop = item.MaShop})" class="bt-content btn info">Thông Tin <i class="fa-solid fa-circle-info"></i></a></td>

                    </tr>

                }

            </tbody>
        </table>


    </div>
</div>

