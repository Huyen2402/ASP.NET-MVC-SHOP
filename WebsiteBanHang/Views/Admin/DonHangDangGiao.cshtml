
@using WebsiteBanHang.Models
@model List<DonDatHang>

@{
    ViewBag.Title = "DonHangDangGiao";
    Layout = "~/Views/Layout/AdminHomeLayout.cshtml";
}

<h2>DonHangDangGiao</h2>

<div class="container mt-3" style="padding-top:80px;">
    <h2>Danh Sách Đơn Hàng Chờ Xác Nhận</h2>

    <table class="table table-light table-hover table-bordered " style="z-index:99999;">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên Người Mua</th>
                <th>Thời Gian Đặt</th>
                <th>Ưu Đãi</th>
                <th>Tình Trạng GH</th>
                <th>Hình Thức Thanh Toán</th>
                <th>Tình Trạng TT</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaDDH</td>
                    <td>@item.ThanhVien.HoTen</td>
                    <td>@item.NgayDat</td>
                    <td>@item.UuDai</td>
                    <td>@item.TinhTrangGiaoHang.TenTinhTrang</td>
                    <td>@item.HinhThucThanhToan</td>
                    @if (@item.DaThanhToan == true)
                    {
                        <td>Đã Thanh Toán</td>
                    }
                    else
                    {
                        <td>Chưa Thanh Toán</td>
                    }



                





                </tr>
            }


        </tbody>

    </table>


</div>

