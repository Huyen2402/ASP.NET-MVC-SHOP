
@using WebsiteBanHang.Models
@model List<DonDatHang>

@{
    ViewBag.Title = "DonHangDangGiao";
    Layout = "~/Views/Layout/AdminHomeLayout.cshtml";
    int i = 1;
}



    <h2>Danh Sách Đơn Hàng Đang Giao </h2>

    <table id="example" class="table table-light table-hover table-bordered " style="z-index:99999;">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên Người Mua</th>
                <th>Thời Gian Đặt</th>
                <th>Ưu Đãi</th>
                <th>Tình Trạng GH</th>
                <th>Hình Thức Thanh Toán</th>
                <th>Tình Trạng TT</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                
                <tr >
                    <td>@i</td>
                    <td>@item.ThanhVien.HoTen</td>
                    <td>@item.NgayDat</td>
                    <td>@item.UuDai</td>
                    <td>@item.TinhTrangGiaoHang.TenTinhTrang</td>
                    <td>@item.HinhThucThanhToan</td>
                    @if (@item.DaThanhToan == true)
                    {
                        <td>Đã Thanh Toán</td>
                    }
                    else
                    {
                        <td>Chưa Thanh Toán</td>
                    }










                </tr>
                i++;
            }


        </tbody>

    </table>


<style>
    .itemLSP {
        display: none;
    }
</style>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    })
    $(".Trang_1").show();
    $('.page-item').click(function () {
        $('.itemLSP').hide();
        var Trang = $(this).attr("data-Trang");

        $('.Trang_' + Trang).show();
    })

</script>

