@{
    ViewBag.Title = "XemShop";
    Layout = "~/Views/Layout/SearchLayout.cshtml";
    List<SanPham> list = ViewBag.list as List<SanPham>;
}


<h1 style="font-family:'Cambria Math'" class="text-center mt-4">Tất Cả Sản Phẩm</h1>
