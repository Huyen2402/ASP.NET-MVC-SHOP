@using WebsiteBanHang.Models
@model List<SanPham>



<div class=" rsidebar span_1_of_left">
        <div class="of-left">
            <h3 style="font-family:'Cambria Math'" class="cate">Danh mục</h3>
        </div>
        <ul style="font-family:'Cambria Math'" class="menu">
            <li class="item1">
                @foreach (var groupitems in Model.GroupBy(n=>n.loaiSanPham))
                {
                    <a href="#">@groupitems.Key.TenLoai </a><ul class="cute" style="display: none;">
                       @foreach (var item in groupitems.GroupBy(n=>n.NhaSanXuat)) { 
                        <li  class="subitem1"><a style="font-family:'Cambria Math'"  href="@Url.Action("SanPham","SanPham", new { @MaLoaiSP = groupitems.Key.MaLoaiSP , @MaNSX = item.Key.MaNSX, @MaShop =  ViewBag.MaShop})">@item.Key.TenNSX </a></li>
                        
                        }
                    </ul>
                }
            </li>
            
            
           

        </ul>
    </div>
