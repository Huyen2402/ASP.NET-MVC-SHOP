
@{
    ViewBag.Title = "Chating";
    Layout = "~/Views/Layout/AdminHomeLayout.cshtml";
}

<style>
    :root {
        --body-bg: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        --msger-bg: #fff;
        --border: 2px solid #ddd;
        --left-msg-bg: #ececec;
        --right-msg-bg: #579ffb;
    }

    .msger {
        display: flex;
        flex-flow: column wrap;
        justify-content: space-between;
        width: 100%;
        margin: 25px 10px;
        height: 600px;
        border: var(--border);
        border-radius: 5px;
        background: var(--msger-bg);
        overflow: scroll;
    }

    .msger-header {
        display: flex;
        justify-content: space-between;
        padding: 10px;
        border-bottom: var(--border);
        background: #eee;
        color: #666;
    }

    .msger-chat {
        flex: 1;
        overflow-y: auto;
        padding: 10px;
    }

        .msger-chat::-webkit-scrollbar {
            width: 6px;
        }

        .msger-chat::-webkit-scrollbar-track {
            background: #ddd;
        }

        .msger-chat::-webkit-scrollbar-thumb {
            background: #bdbdbd;
        }

    .msg {
        display: flex;
        align-items: flex-end;
        margin-bottom: 10px;
    }

        .msg:last-of-type {
            margin: 0;
        }

    .msg-img {
        width: 50px;
        height: 50px;
        margin-right: 10px;
        background: #ddd;
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        border-radius: 50%;
    }

    .msg-bubble {
        max-width: 450px;
        padding: 15px;
        border-radius: 15px;
        background: var(--left-msg-bg);
    }

    .msg-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .msg-info-name {
        margin-right: 10px;
        font-weight: bold;
    }

    .msg-info-time {
        font-size: 0.85em;
    }

    .left-msg .msg-bubble {
        border-bottom-left-radius: 0;
    }

    .right-msg {
        flex-direction: row-reverse;
    }

        .right-msg .msg-bubble {
            background: var(--right-msg-bg);
            color: #fff;
            border-bottom-right-radius: 0;
        }

        .right-msg .msg-img {
            margin: 0 0 0 10px;
        }

    .msger-inputarea {
        display: flex;
        padding: 10px;
        border-top: var(--border);
        background: #eee;
    }

        .msger-inputarea * {
            padding: 10px;
            border: none;
            border-radius: 3px;
            font-size: 1em;
        }

    .msger-input {
        flex: 1;
        background: #ddd;
    }

    .msger-send-btn {
        margin-left: 10px;
        background: rgb(0, 196, 65);
        color: #fff;
        font-weight: bold;
        cursor: pointer;
        transition: background 0.23s;
    }

        .msger-send-btn:hover {
            background: rgb(0, 180, 50);
        }

    .msger-chat {
        background-color: #fcfcfe;
        background-image: url("https://i.dlpng.com/static/png/5199993-love-pink-background-wallpaper-wallpapers-pc-love-backgrounds-1004_1004_preview.png");
    }

    .loading-send {
        width: 45px;
        height: 45px;
    }
</style>
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a> <i class="fa fa-angle-right"></i></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Chat")">Chat với KH</a> <i class="fa fa-angle-right"></i></li>
</ol>
<input type="text" value="@((Session["TaiKhoan"] as WebsiteBanHang.Models.ThanhVien).MaThanhVien)" id="UserID" hidden />
<div class="agile-grids">
    <div class="agile-tables">
        <section class="msger">
            <header class="msger-header">
                <div class="msger-header-title">
                    @ViewBag.HoTen
                </div>
            </header>

            <main class="msger-chat">

            </main>

            <form class="msger-inputarea">
                <input type="text" class="msger-input" placeholder="Nhập tin nhắn...">
                <img src="~/Content/images/loading.gif" class="loading-send msger-send-btn" style="display:none" />
                <button type="submit" class="msger-send-btn" id="btn-send">Gửi</button>
            </form>
        </section>
    </div>
</div>

<script src="~/Scripts/jquery.signalR-2.4.3.js"></script>
<script src="~/signalr/hubs" type="text/javascript"></script>
<script>
    $(function () {
        var chat = $.connection.chat2Hub
        chat.client.displayMessageChating = function () {
            getMessageData();
        }
        $.connection.hub.start();
        getMessageData();
    })
    function getMessageData() {
        var msgerchat = $('.msger-chat');
        var WithUserID = new URLSearchParams(window.location.search).get('WithUserID');
        $.ajax({
            url: location.origin + "/Chat/GetAllMessageChating?UserID=" + WithUserID,
            type: 'GET',
            dataType: 'JSON',
            success: function (data) {
                msgerchat.empty()
                if (data.length > 0) {
                    $.each(data, function (i, model) {
                        var date = new Date(parseInt(model.CreatedDate.substr(6)));
                        if (model.FromUserID == WithUserID) {
                            msgerchat.append(
                                '<div class="msg left-msg">' +
                                '<div class="msg-img"' +
                                'style="background-image: url(/Content/images/user.png)"></div>' +
                                ' <div class="msg-bubble">' +
                                '<div class="msg-info">' +
                                '<div class="msg-info-name">' + model.FromUserName + '</div>' +
                                '<div class="msg-info-time">' + date.getHours() + ' : ' + date.getMinutes() + '</div>' +
                                '</div>' +
                                '<div class="msg-text">' + model.Text + '</div>' +
                                '</div>' +
                                '</div>'
                            );
                        } else {
                            msgerchat.append(
                                '<div class="msg right-msg">' +
                                '<div class="msg-img"' +
                                'style="background-image: url(/Content/images/admin.png)"></div>' +
                                ' <div class="msg-bubble">' +
                                '<div class="msg-info">' +
                                '<div class="msg-info-name">' + model.FromUserName + '</div>' +
                                '<div class="msg-info-time">' + date.getHours() + ' : ' + date.getMinutes() + '</div>' +
                                '</div>' +
                                '<div class="msg-text">' + model.Text + '</div>' +
                                '</div>' +
                                '</div>'
                            );
                        }
                        msgerchat.append(
                            '</div id="end">' +
                            '</div>'
                        )
                    })
                }
                $('.msger-chat').scrollTop(2000000);
            }
        })
    }
    $('#btn-send').click(function send() {
        event.preventDefault();
        var input = $('.msger-input').val();
        if (input == "") {
            $.notify("Vui lòng nhập vào tin nhắn!", "warn");
            return false;
        }
        var fromId = $('#UserID').val();
        var text = $('.msger-input').val();
        $.ajax({
            url: location.origin + "/Chat/Send",
            data: { FromUserId: fromId, ToUserID: new URLSearchParams(window.location.search).get('WithUserID'), Text: text },
            type: 'POST',
            dataType: 'JSON',
            success: function (data) {
                if (data.status) {
                    $(".loading-send").hide();
                    $("#btn-send").show();
                    $(".msger-input").prop("disabled", false);
                    $('.msger-input').val("");
                    $(".chatbox__body").animate({ scrollTop: 2000000 });
                    $('.msger-chat').animate({
                        scrollTop: $("#end").offset().top
                    }, 2000);
                } else {
                    alert("Có lỗi xảy ra!");
                    return;
                }
            }
        })
        $("#btn-send").hide();
        $(".msger-input").prop("disabled", true);
        $(".loading-send").show();
    })
</script>